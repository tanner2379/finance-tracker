<h2>User Details</h2>
<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<div class="card card-header results-block">
  <table class="col-md-12">
    <tbody>
      <tr>
        <td><strong>Name: </strong> <%= @user.full_name %></td>
        <td><strong>Email: </strong> <%= @user.email %></td>
        <td><strong>Actions: </strong>
            <% if current_user.not_friends_with?(@user.id) %>
              <!-- create route not expecting id, so send it in as an argument friend: friend -->
              <%= link_to "Follow Friend?", friendships_path(friend: @user), class: "btn btn-sm btn-success", method: :post %>
            <% else %>
              <span class="badge badge-secondary">
                You are already friends
              </span>
            <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">This user is not tracking any stocks.</p>
<% end %>
